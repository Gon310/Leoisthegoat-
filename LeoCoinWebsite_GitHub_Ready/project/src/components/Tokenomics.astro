<section id="tokenomics" class="py-20 bg-secondary">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center text-primary mb-12" data-aos="fade-up">Tokenomics</h2>
    <div class="flex flex-col md:flex-row items-center justify-center gap-12">
      <div class="w-full md:w-1/2" data-aos="fade-right">
        <canvas id="tokenomicsChart"></canvas>
      </div>
      <div class="w-full md:w-1/2 text-white" data-aos="fade-left">
        <div class="space-y-4">
          <div class="flex items-center">
            <div class="w-4 h-4 bg-[#FFD700] rounded-full mr-4"></div>
            <span>Presale - 40%</span>
          </div>
          <div class="flex items-center">
            <div class="w-4 h-4 bg-[#FFA500] rounded-full mr-4"></div>
            <span>Liquidity - 30%</span>
          </div>
          <div class="flex items-center">
            <div class="w-4 h-4 bg-[#FF6B6B] rounded-full mr-4"></div>
            <span>Marketing - 20%</span>
          </div>
          <div class="flex items-center">
            <div class="w-4 h-4 bg-[#4ECDC4] rounded-full mr-4"></div>
            <span>Community Rewards - 10%</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import Chart from 'chart.js/auto';

  const ctx = document.getElementById('tokenomicsChart') as HTMLCanvasElement;
  new Chart(ctx, {
    type: 'pie',
    data: {
      labels: ['Presale', 'Liquidity', 'Marketing', 'Community Rewards'],
      datasets: [{
        data: [40, 30, 20, 10],
        backgroundColor: ['#FFD700', '#FFA500', '#FF6B6B', '#4ECDC4'],
      }]
    },
    options: {
      responsive: true,
      plugins: {
        legend: {
          display: false
        }
      }
    }
  });
</script>